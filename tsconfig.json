{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["node"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "index.tsx", "types.ts", "App.tsx", "services/geminiService.ts", "components/McqCard.tsx", "components/TrueFalseCard.tsx", "components/ExplanationCard.tsx", "components/LoadingSpinner.tsx", "components/icons.tsx", "components/QuizNavigation.tsx", "components/QuizSummary.tsx", "components/ExamSelection.tsx", "components/ResourceLinks.tsx", "components/Footer.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
